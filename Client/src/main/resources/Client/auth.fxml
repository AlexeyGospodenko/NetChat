<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="window" prefHeight="400.0" prefWidth="500.0" snapToPixel="false"
            style="-fx-background-color: #1144AA;" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.AuthController">
    <AnchorPane layoutY="100.0" prefHeight="300.0" prefWidth="530.0" style="-fx-background-color: fafafa;"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="100.0">
        <TextField fx:id="txtLogin" layoutX="150.0" layoutY="90.0" onAction="#enter" prefHeight="30.0" prefWidth="200.0"
                   promptText="Login"
                   style="-fx-border-color: lightgreen; -fx-border-radius: 5; -fx-background-insets: 0;"
                   AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Label alignment="CENTER" contentDisplay="CENTER" depthTest="DISABLE" layoutY="15.0" prefHeight="60.0"
               prefWidth="530.0" text="Authorization" textAlignment="CENTER" textFill="#5b5555"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="14.0">
            <font>
                <Font name="Kristen ITC" size="36.0"/>
            </font>
        </Label>
        <TextField fx:id="txtPassword" layoutX="150.0" layoutY="150.0" onAction="#enter" prefHeight="30.0"
                   prefWidth="200.0" promptText="Password"
                   style="-fx-border-color: lightgreen; -fx-border-radius: 5; -fx-background-insets: 0;"
                   AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Button contentDisplay="CENTER" layoutX="175.0" layoutY="212.0" mnemonicParsing="false" onAction="#enter"
                prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: FFA700;" text="Enter"
                textAlignment="JUSTIFY" textFill="WHITE" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="175.0"
                AnchorPane.rightAnchor="175.0" AnchorPane.topAnchor="220.0">
            <font>
                <Font name="Lobster" size="24.0"/>
            </font>
            <effect>
                <Blend/>
            </effect>
        </Button>
        <TextField fx:id="txtHost" alignment="CENTER_RIGHT" layoutX="406.0" layoutY="14.0" prefHeight="25.0"
                   prefWidth="80.0" promptText="host" text="127.0.0.1"/>
        <TextField fx:id="txtPort" alignment="CENTER_RIGHT" layoutX="406.0" layoutY="44.0" prefHeight="25.0"
                   prefWidth="80.0" promptText="port" text="8189"/>
    </AnchorPane>
    <Label id="NetChat" alignment="TOP_CENTER" layoutX="1.0" prefHeight="100.0" prefWidth="380.0" text="NetChat"
           textAlignment="CENTER" textFill="WHITE" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="0.0">
        <font>
            <Font name="Kristen ITC" size="48.0"/>
        </font>
    </Label>
    <Button contentDisplay="CENTER" layoutX="336.0" layoutY="14.0" mnemonicParsing="false" onAction="#register"
            prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: FFA700;" text="Register"
            textAlignment="JUSTIFY" textFill="WHITE">
        <font>
            <Font name="Lobster" size="15.0"/>
        </font>
        <effect>
            <Blend/>
        </effect>
    </Button>
    <Button id="Exit" contentDisplay="CENTER" layoutX="337.0" layoutY="55.0" mnemonicParsing="false" prefHeight="30.0"
            prefWidth="150.0" style="-fx-background-color: FFA700;" text="Exit" textAlignment="JUSTIFY"
            textFill="WHITE">
        <font>
            <Font name="Lobster" size="15.0"/>
        </font>
    </Button>
</AnchorPane>
